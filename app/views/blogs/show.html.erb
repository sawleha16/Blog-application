<h1><%= @blog.title %></h1>

<p><%= @blog.body %></p>

<ul>
  <li><%= link_to "Edit", edit_blog_path(@blog) %></li>
  <li><%= link_to "Destroy", blog_path(@blog), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>


<h2>Comments</h2>
<%@blog.comments.each do |comment| %>
 <%= render "comments/comment" , comment: comment %>
<%end%>



<p>Add a comment:</p>
<%= render 'comments/form' %>
